<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".AnimeFragment">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="230dp"
       android:background="@color/white"
       app:cardElevation="0dp">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/gotobun"
           android:elevation="0dp"/>

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/gotobun_shape"
           android:elevation="0dp"/>


   </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:textStyle="bold"
        android:textColor="#EA7AB4"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:text="Go-Tōbun no Hanayome"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#808080"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="18dp"
        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:textFontWeight="500"
        android:text="Anime"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#808080"
        android:layout_margin="18dp"
        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:textFontWeight="400"
        android:text="@string/gotobun"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1d1d1c"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="18dp"
            android:fontFamily="sans-serif-light"
            android:textSize="16sp"
            android:textFontWeight="400"
            android:text="Protagonistas: "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:layout_marginTop="18dp"
            android:text="Futaro Uesugi, Nino Nakano, Miko Nakano, Yotsuba Nakano, Ichika Nakano, Itsuki Nakano"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1d1d1c"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="18dp"
            android:fontFamily="sans-serif-light"
            android:textSize="16sp"
            android:textFontWeight="400"
            android:text="Año de estreno: "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:layout_marginTop="18dp"
            android:text="2019-01-11"
            />

    </LinearLayout>


</LinearLayout>