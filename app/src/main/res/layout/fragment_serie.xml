<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SerieFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/black"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/casa_papel"
            android:elevation="0dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/papel_shape"
            android:elevation="0dp"/>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:textStyle="bold"
        android:textColor="#bb2e2a"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:text="La Casa De Papel"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#808080"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="18dp"
        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:textFontWeight="500"
        android:text="Serie"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_margin="18dp"
        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:textFontWeight="400"
        android:text="@string/casa_papel"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#bb2e2a"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="18dp"
            android:fontFamily="sans-serif-light"
            android:textSize="16sp"
            android:textFontWeight="400"
            android:text="Protagonistas: "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_marginTop="18dp"
            android:text="Úrsula Corberó, Álvaro Morte, Itziar Ituño"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#bb2e2a"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="18dp"
            android:fontFamily="sans-serif-light"
            android:textSize="16sp"
            android:textFontWeight="400"
            android:text="Año de estreno: "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_marginTop="18dp"
            android:text="2017-06-30"
            />

    </LinearLayout>
</LinearLayout>